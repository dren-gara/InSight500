@page "/"
@inject NavigationManager Navigation

<h1 class="display-4">Welcome to InSight500 Dashboard</h1>
<p class="lead">Consolidated financial operations and reporting for S&P 500 companies.</p>

<hr class="my-4" />

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Income Statements</h5>
                <p class="card-text">View and manage income statements for S&P 500 companies.</p>
                <button class="btn btn-primary" @onclick="NavigateToIncomeStatements">Go to Income Statements</button>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Real-Time Data</h5>
                <p class="card-text">Monitor real-time financial transaction streams.</p>
                <button class="btn btn-primary" @onclick="NavigateToRealTimeData">Go to Real-Time Data</button>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Reports</h5>
                <p class="card-text">Generate customizable financial reports.</p>
                <button class="btn btn-primary" @onclick="NavigateToReports">Generate Reports</button>
            </div>
        </div>
    </div>
</div>

<hr class="my-4" />

<h4>Quick Overview</h4>
<p>Use this dashboard to manage financial operations data from S&P 500 companies. Choose from a variety of features including income statements, real-time data streaming, and customizable financial reports.</p>

<button class="btn btn-outline-primary" @onclick="NavigateToAbout">Learn More About InSight500</button>

@code {
    private void NavigateToIncomeStatements()
    {
        Navigation.NavigateTo("/income-statements");
    }

    private void NavigateToRealTimeData()
    {
        Navigation.NavigateTo("/real-time-data");
    }

    private void NavigateToReports()
    {
        Navigation.NavigateTo("/reports");
    }

    private void NavigateToAbout()
    {
        Navigation.NavigateTo("/about");
    }
}